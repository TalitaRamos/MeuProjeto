<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.meuprojeto.cadastroAluno">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="643dp"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cadastro_dos_alunos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <EditText
            android:id="@+id/login_Alun"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="@string/log_in"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/nome_Alun"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nome"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/email_Alun"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/curso_Alun"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/curso"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/senha_Alun"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/senha"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/repete_Alun"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/repetir_senha"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button_cad_alun"
            style="@style/Button_style"
            android:layout_width="207dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:text="@string/cadastre_Se" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
